<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SecondFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#FFC107"
        android:layout_height="70dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginRight="50dp"
            android:textSize="35dp"
            android:text="My Smart Home"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/search"
            android:scaleX="0.3"
            app:tint="@color/white"
            android:scaleY="0.3"
            android:layout_marginLeft="210dp"

            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/sort"
            android:scaleX="0.3"
            app:tint="@color/white"
            android:scaleY="0.3"
            android:layout_marginLeft="290dp"

            />


    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/things"
        app:tint="#433F3F"
        android:scaleX="0.6"
        android:scaleY="0.6"
        android:layout_marginTop="55dp"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="No things"
        android:gravity="center"
        android:textColor="#595454"
        android:textSize="30dp"
        android:layout_marginTop="130dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textSize="20dp"
        android:textColor="#857D7D"
        android:gravity="center"
        android:layout_marginTop="180dp"
        android:text="It looks like we didn't discover any devices. \n \n Try an option below"

        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#B5B3B3"
        android:layout_marginTop="280dp"
        />

    <TextView
        android:layout_width="150dp"
        android:layout_marginTop="315dp"
        android:layout_marginLeft="100dp"
        android:layout_height="30dp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:textSize="20dp"
        android:text="Run discovery"
        />
    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:text="Add a cloud account"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:layout_marginTop="390dp"
        android:layout_marginLeft="100dp"
        />
    <TextView
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:text="View our supported devices"
        android:textColor="#2196F3"
        android:textStyle="bold"
        android:layout_marginTop="470dp"
        android:layout_marginLeft="100dp"

        />
    <TextView
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:text="Contact support"
        android:textStyle="bold"
         android:textColor="#2196F3"
         android:layout_marginLeft="100dp"
        android:layout_marginTop="552dp"
        />
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:layout_width="50dp"
        app:backgroundTint="#2196F3"
        app:icon="@drawable/search"
        android:layout_marginLeft="30dp"
        app:iconTint="@color/white"
        android:layout_height="50dp"
        android:layout_marginTop="300dp" />
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        app:iconTint="@color/white"
        app:backgroundTint="#2196F3"
        app:icon="@drawable/add"
        android:layout_marginTop="380dp"

        />
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:layout_width="50dp"
        app:backgroundTint="#2196F3"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        app:iconTint="@color/white"
        app:icon="@drawable/dots"
        android:layout_marginTop="460dp"  />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:backgroundTint="#2196F3"
        android:layout_marginLeft="30dp"
        app:iconTint="@color/white"
        app:iconSize="15dp"
        app:icon="@drawable/mail"
        android:layout_marginTop="540dp" />

</FrameLayout>